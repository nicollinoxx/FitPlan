<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title || FitPlan ) %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" , "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_importmap_tags %>

    <% if turbo_native_app? %>
      <style>.hide-on-mobile, h1 { display: none; }</style>
    <% end %>
  </head>

  <body>
    <div class="hide-on-mobile mb-4">
      <% if Current.user.present? %>
        <%= render 'layouts/navbar' %>
      <% end %>

      <div class="container my-3">
        <% if notice.present? %>
          <div class="bg-dark text-light p-2 rounded d-inline" role="alert" data-controller="bridge--flash-message"><%= notice %></div>
        <% end %>
      </div>
    </div>

    <div class="container my-4">
      <%= yield %>
    </div>
  </body>
</html>
