<nav class="navbar navbar-expand-lg border-bottom sticky-top py-2">
  <div class="container">
    <%= link_to root_path, class: 'navbar-brand d-flex align-items-center' do %>
      <%= image_tag 'logo.png', class: 'img-fluid me-2', style: 'max-height: 35px;' %>
      <span class="fw-bold text-success">FITPLAN</span>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon" style="width: 15px; height: 20px;"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to sheets_path, class: 'nav-link px-3 fw-medium' do %>
            <i class="bi bi-clipboard-data me-1"></i> <%= t('link_sheets') %>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to sheet_requests_path, class: 'nav-link px-3 fw-medium' do %>
            <i class="bi bi-share me-1"></i> <%= t('link_sheet_requests') %>
          <% end %>
        </li>

        <li class="nav-item">
          <%= link_to dashboard_path, class: 'nav-link px-3 fw-medium' do %>
            <i class="bi bi-activity me-1"></i> <%= t('link_dashboard') %>
          <% end %>
        </li>
      </ul>

      <div class="d-flex align-items-center flex-wrap ms-auto gap-1 ps-3">
        <%= render 'shared/theme_toggle' %>

        <%= link_to account_path, class: 'd-flex align-items-center btn btn-sm btn-primary rounded' do %>
          <span class="text-truncate" style="max-width: 8rem;" ><%= Current.user.email %></span>

          <% if Current.user.avatar.attached? %>
            <%= image_tag Current.user.avatar, class: 'rounded-circle object-fit-cover', style: 'width: 30px; height: 30px;' %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
