<% content_for(:title, t('.title')) %>

<%= form_with(model: user_detail) do |form| %>
    <% if user_detail.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(user_detail.errors.count, t('error')) %> <%= t('.error_message_form')%></h2>

        <ul>
          <% user_detail.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
        <%= form.label :height, t('.label.height'), style: "display: block", class: 'form-label' %>
        <%= form.number_field :height, class: "form-control", placeholder: "1,75", step: "any", min: 0 %>
    </div>

    <div class="mb-3">
        <%= form.label :weight, t('.label.weight'), style: "display: block", class: 'form-label' %>
        <%= form.number_field :weight, class: "form-control", placeholder: "65,2", step: "any", min: 0 %>
    </div>

    <div class="mb-3">
        <%= form.label :birth_date, t('.label.age'), class: 'form-label' %>
        <%= form.date_field :birth_date, class: "form-control", max: Date.today %>
    </div>

    <div class="mb-3">
        <%= form.label :gender, t('.label.gender'), style: "display: block", class: 'form-label' %>
        <%= form.select :gender, options_for_select([['Male', 'male'], ['Female', 'female']]), {}, { class: "form-select" } %>
    </div>

    <%= form.submit t('submit'), class: "btn btn-success" %>
<% end %>
