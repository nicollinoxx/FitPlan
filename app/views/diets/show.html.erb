<% content_for(:title, t('.title')) %>

<%= render @diet %>

<div data-controller="bridge--menu">
  <div class="d-none" data-controller="bridge--nav-button" data-action="click->bridge--menu#show">Options</div>

    <div class='btn-toolbar'>
      <%= link_to t('.action_edit'), edit_sheet_diet_path(@sheet, @diet), data: { bridge__menu_target: "item" }, class: 'btn btn-secondary me-4' %>
      <%= button_to t('.action_destroy'), sheet_diet_path(@sheet, @diet), method: :delete, data: { bridge__menu_target: "item", 'turbo-confirm': t('.message_destroy') }, class: 'btn btn-danger' %>
    </div>
  <hr>
    <%= link_to t('.link_back'), sheet_diets_path(@sheet), class: 'hide-on-mobile mt-2' %>
</div>
