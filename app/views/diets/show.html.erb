<% content_for(:title, "Diet") %>

<%= render @diet %>

<div data-controller="bridge--menu">
  <div class="d-none" data-controller="bridge--nav-button" data-action="click->bridge--menu#show">Options</div>

    <div class='btn-toolbar'>
      <%= link_to "Edit diet", edit_sheet_diet_path(@sheet, @diet), data: { bridge__menu_target: "item" }, class: 'btn btn-secondary me-4' %>
      <%= button_to "Destroy diet", sheet_diet_path(@sheet, @diet), method: :delete, data: { bridge__menu_target: "item", 'turbo-confirm': 'Are you sure?' }, class: 'btn btn-danger' %>
    </div>
  <hr>
    <%= link_to 'Back', sheet_diets_path(@sheet), class: 'hide-on-mobile' %>
</div>
