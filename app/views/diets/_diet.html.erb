<div id="<%= dom_id diet %>">
  <div class="bg-secondary-subtle rounded mb-3 p-2">
    <div class="row mb-2">
      <div class="col-8">
        <h3 class='text-start fw-bold'><%= diet.meal %></h3>
      </div>
      <div class="col text-end">
        <% if action_name != 'show' %>
          <%= link_to 'Show', sheet_diet_path(@sheet, diet), class: "btn btn-success" %>
        <% end %>
      </div>
    </div>

    <div class="bg-light rounded p-2">
        <p>
          <%= raw diet.description %>
        </p>
        <hr>
        <h1 class='h4'>Description</h1>

        <ul>
          <li>
            <strong>Protein:</strong>
            <%= diet.protein_g %>
          </li>
          <li>
            <strong>Carbohydrates:</strong>
            <%= diet.carbohydrate_g %>
          </li>
          <li>
            <strong>Gordura:</strong>
            <%= diet.fat_g %>
          </li>
          <li>
            <strong>Total calories:</strong>
            <%= diet.calories %> kcal
          </li>
        </ul>
    </div>
  </div>
</div>
