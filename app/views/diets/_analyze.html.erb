<div class="mt-3 progress p-0 overflow-hidden" style="height: 10px;">
  <div class="d-flex w-100">
    <div class="bg-primary" style="flex: <%= @percentage[:protein] %>"></div>
    <div class="bg-success" style="flex: <%= @percentage[:carbohydrate] %>"></div>
    <div class="bg-warning" style="flex: <%= @percentage[:fat] %>"></div>
  </div>
</div>

<div class="d-flex gap-2 small mb-3">
  <span class="text-primary"><%= t(".proteins") %>: <%= @percentage[:protein] %>%</span>
  <span class="text-success"><%= t(".carbohydrates") %>: <%= @percentage[:carbohydrate] %>%</span>
  <span class="text-warning"><%= t(".fats") %>: <%= @percentage[:fat] %>%</span>
</div>
