<%= form_with(model: [@sheet, @diet], data: { controller: "bridge--form", action: "turbo:submit-start->bridge--form#submitStart turbo:submit-end->bridge--form#submitEnd" }) do |form| %>
  <% if diet.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(diet.errors.count, "error") %> prohibited this diet from being saved:</h2>

      <ul>
        <% diet.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='mb-3' >
    <%= form.label :meal, style: "display: block", class: 'form-label' %>
    <%= form.text_field :meal, class: 'form-control border border-success' %>
  </div>

  <div class='mb-3' >
    <%= form.label :description, style: "display: block", class: 'form-label' %>
    <%= form.rich_text_area :description, class: 'form-control border border-success' %>
  </div>

  <div class='mb-3' >
    <%= form.label :protein_g, "Proteing in grams", style: "display: block", class: 'form-label' %>
    <%= form.text_field :protein_g, class: 'form-control border border-success' %>
  </div>

  <div class='mb-3' >
    <%= form.label :carbohydrate_g, "carbohydrate in grams", style: "display: block", class: 'form-label' %>
    <%= form.text_field :carbohydrate_g, class: 'form-control border border-success' %>
  </div>

  <div class='mb-3' >
    <%= form.label :fat_g, "Fat in grams", style: "display: block", class: 'form-label' %>
    <%= form.text_field :fat_g, class: 'form-control border border-success' %>
  </div>

  <div>
    <%= form.submit "Save", data: { "bridge--form-target": "submit", "bridge-title": "Save" }, class: 'btn btn-success' %>
  </div>
<% end %>
