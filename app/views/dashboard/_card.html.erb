<div class="col-12 col-sm-6 col-md-3">
  <div class="rounded p-2 bg-body-tertiary border-bottom border-2 h-100">
    <div class="d-flex flex-column justify-content-between">
      <div class="d-flex align-items-center gap-2 mb-2">
        <% if icon.present? %>
          <i class="<%= icon %> text-primary fs-5"></i>
        <% end %>
        <h6 class="card-title mb-0 text-muted text-uppercase small"><%= title %></h6>
      </div>
      <p class="fs-5 fw-semibold mb-0"><%= content %></p>
    </div>
  </div>
</div>
