<% content_for(:title, t('.title')) %>

<h1>Notifications</h1>

<div class="row">
  <% @notifications.each do |notification| %>
    <div class="col-md-6 p-2">
      <div class="border rounded shadow p-2">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <div class="d-flex align-items-center text-truncate" style="max-width: 70%;">
            <% if notification.sender.avatar.attached? %>
              <%= image_tag notification.sender.avatar, class: "rounded-circle me-2 border border-primary", style: "width:30px; height:30px;" %>
            <% end %>
            <span class="text-truncate" title="<%= notification.sender.email %>">
              <%= notification.sender.email %>
            </span>
          </div>
          <div class="d-flex gap-2">
            <%= button_to accept_notification_path(notification), method: :patch, class: "btn btn-success btn-sm rounded-circle" do %>
              <i class="bi bi-check2"></i>
            <% end %>
            <%= button_to notification, method: :delete, class: "btn btn-danger btn-sm rounded-circle" do %>
              <i class="bi bi-x-lg"></i>
            <% end %>
          </div>
        </div>
        <p class="mb-0 mt-2">
          <i class="bi bi-chat-right-text me-2"></i>
          <%= notification.message %>
        </p>
      </div>
    </div>
  <% end %>
</div>
