<% content_for(:title, t('.title')) %>

<%= form_with(url: identity_password_reset_path, method: :patch) do |form| %>
  <% if @user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@user.errors.count, t('.error')) %> <%= t('.error_message_form')%></h2>

      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :sid, value: params[:sid] %>

  <div>
    <%= form.label :password, t('.password_label'), style: "display: block", class: 'form-label' %>
    <%= form.password_field :password, required: true, autofocus: true, autocomplete: "new-password", class: 'form-control border border-success' %>
    <%= content_tag :small, t('.minimum_characters'), class: "text-muted" %>
  </div>

  <div>
    <%= form.label :password_confirmation, t('.confirmation_new_password_label'), style: "display: block", class: 'form-label' %>
    <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", class: 'form-control border border-success' %>
  </div>

  <div>
    <%= form.submit t('.submit') %>
  </div>
<% end %>
