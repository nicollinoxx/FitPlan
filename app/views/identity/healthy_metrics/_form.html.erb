<%= form_with(model: @healthy_metric, url: identity_healthy_metric_path) do |form| %>
    <% if healthy_metric.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(healthy_metric.errors.count, t('error')) %> <%= t('.error_message_form')%></h2>

        <ul>
          <% healthy_metric.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
        <%= form.label :height, t('height'), style: "display: block", class: 'form-label' %>
        <%= form.number_field :height, required: true, class: "form-control", placeholder: "1,75", step: "any", min: 0 %>
    </div>

    <div class="mb-3">
        <%= form.label :weight, t('weight'), style: "display: block", class: 'form-label' %>
        <%= form.number_field :weight, required: true, class: "form-control", placeholder: "65,2", step: "any", min: 0 %>
    </div>

    <div class="mb-3">
      <%= form.label :birth_date, "#{t('age')} (DD-MM-YYYY)", class: 'form-label' %>
      <%= form.date_field :birth_date, required: true, class: "form-control", max: Date.today %>
    </div>

    <div class="mb-3">
        <%= form.label :gender, t('gender'), style: "display: block", class: 'form-label' %>
        <%= form.select :gender, options_for_select([['Male', 'male'], ['Female', 'female']], @healthy_metric.gender), {}, { required: true, class: "form-select" } %>
    </div>

    <%= form.submit "Save", class: "btn btn-success" %>
<% end %>
