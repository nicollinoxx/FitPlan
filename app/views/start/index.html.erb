<% content_for(:title, t('.title')) %>

<h3 class="fw-bold mt-3"><%= t('.section') %></h3>
<%= link_to home_path, class: 'link-underline-light link-dark' do %>
  <div class="bg-light rounded shadow mb-3">
    <div class="d-flex p-2">
      <% if Current.user.avatar.attached? %>
        <%= image_tag Current.user.avatar, class: 'rounded-circle', style: "width: 80px; height: 75px;" %>
      <% else %>
        <%= image_tag 'avatar.png', class: 'rounded-circle', style: "width: 80px; height: 75px;" %>
      <% end %>
      <div class="flex-grow-1 ms-3 mt-1">
        <h1 class="h4 fw-bold"><%= t('.section_title') %></h1>
        <p class='text-break'><%= Current.user.email %></p>
      </div>
    </div>
  </div>
<% end %>


<h3 class='fw-bold mt-3'><%= t('.section_1') %></h3>
<%= link_to sheets_workout_path, class: 'link-underline link-underline-opacity-0 link-dark' do %>
