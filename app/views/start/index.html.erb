    <div class="d-flex p-2">
      <%= image_tag 'image 3.png', class: 'img-fluid rounded' %>
      <div class="flex-grow-1 ms-3 mt-2">
        <h1 class='h4 fw-bold'><%= t('.section_1_title') %></h1>
        <p><strong><%= t('.description') %></strong> <%= t('.section_1_detail') %></p>
      </div>
    </div>
  </div>
<% end %>

<%= link_to sheets_diet_path, class: 'link-underline-light link-dark' do %>
