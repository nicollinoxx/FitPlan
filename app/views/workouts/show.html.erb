<% content_for(:title, "Workout") %>

<%= render @workout %>

<div data-controller="bridge--menu">
  <div class="d-none" data-controller="bridge--nav-button" data-action="click->bridge--menu#show">Options</div>
    <div class='btn-toolbar'>
      <div data-bridge--menu-target="title" class="d-none">Contact Options</div>
      <%= link_to "Edit workout", edit_sheet_workout_path(@sheet, @workout), data: { bridge__menu_target: "item" }, class: 'btn btn-secondary me-4' %>
      <%= button_to "Destroy workout", sheet_workout_path(@sheet, @workout), method: :delete, data: { bridge__menu_target: "item", 'turbo-confirm': 'Destroy workout?' }, class: 'btn btn-danger' %>
    </div>
  <hr>
    <%= link_to 'back', sheet_workouts_path(@sheet), class: 'hide-on-mobile' %>
</div>
