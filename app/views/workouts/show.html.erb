  <p style="color: green" data-controller="bridge--flash-message"><%= notice %></p>
<% end %>

<%= render @workout %>

<div>
  <div class="hide-on-native">
    <%= link_to "Edit this workout", edit_workout_path(@workout), data: { controller: "bridge--nav-button", bridge_title: "Edit" } %> |
