<% content_for(:title, t('.title')) %>

<div class="d-flex justify-content-between align-items-center">
  <h1><%= t('.title') %></h1>
  <%= link_to t('new'), new_shares_sheet_request_path, data: { controller: "bridge--nav-button", bridge_title: "+ New" }, class: 'btn btn-success mb-3' %>
</div>

<%= turbo_frame_tag "sheet_requests" do %>
  <div class="sticky-top d-flex align-items-center justify-content-between mb-3">
    <h5 class="text-success"><%= params[:filter] == "sent" ? t('.filters.sent') : t('.filters.received') %><h5>
    <div class="ms-auto dropdown bg-light rounded mt-2">
      <button class="btn btn-sm border dropdown-toggle" type="button" id="languageButton" data-bs-toggle="dropdown">
        <i class="bi bi-funnel-fill"><%= t('.filter') %></i>
      </button>
      <ul class="dropdown-menu dropdown-menu-end">
        <li><%= link_to t('.filters.sent'), shares_sheet_requests_path(filter: 'sent'), class: 'dropdown-item' %></li>
        <li><%= link_to t('.filters.received'), shares_sheet_requests_path(filter: 'received'), class: 'dropdown-item' %></li>
      </ul>
    </div>
  </div>

  <div class="row">
    <%= render partial: "sheet_request", collection: @sheet_requests, as: :sheet_request, id: "sheet_request" %>
  </div>
<% end %>
