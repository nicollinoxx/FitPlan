<div class="col-md-6 p-2 hover-zoom-sm">
  <div class="bg-body-tertiary border-start border-2 <%= sheet.workout? ? 'border-success' : 'border-warning' %>
    rounded shadow position-relative p-3">

    <%= render sheet %>
    <div class="position-absolute top-0 end-0 p-2", style="top: 1rem; right: 1rem; z-index: 2;">
      <%= link_to sheet_path(sheet), data: { turbo_frame: "_top" }, class: "me-1 btn btn-sm bg-body rounded" do %>
        <i class="bi bi-pencil"></i>
      <% end %>
    </div>
    <%= link_to "", sheet_diets_or_workouts_path(sheet), data: { turbo_frame: "_top"}, class: "stretched-link" %>
  </div>
</div>
