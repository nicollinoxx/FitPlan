<% if notice.present? %>
  <p style="color: green" data-controller="bridge--flash-message"><%= notice %></p>
<% end %>

<%= render @sheet %>

<div>
  <div class="hide-on-native">
    <%= link_to "Edit this sheet", edit_sheet_path(@sheet), data: { controller: "bridge--nav-button", bridge_title: "Edit" } %> |
    <%= link_to "Back to sheets", sheets_path %>
  </div>

  <%= link_to "Destroy this sheet", @sheet, "data-turbo-method": :delete %>
</div>
