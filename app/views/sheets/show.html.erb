<h1><% content_for(:title, t('.title')) %></h1>

<div class='border-start border-5 border-dark bg-success-subtle shadow rounded mb-4 p-2'>
  <%= render @sheet %>
</div>

<div data-controller="bridge--menu">
  <div class="d-none" data-controller="bridge--nav-button" data-action="click->bridge--menu#show">Options</div>

  <div class='d-flex'>
    <div data-bridge--menu-target="title" class="d-none">Contact Options</div>
    <%= link_to t('.action_edit'), edit_sheet_path(@sheet), data: { bridge__menu_target: "item" }, class: 'btn btn-secondary me-4' %>
    <%= button_to t('.action_destroy'), @sheet, method: :delete, data: { bridge__menu_target: "item", 'turbo-confirm': t('.message_destroy') }, class: 'btn btn-danger' %>
  </div>
  <hr>
    <%= link_to t('.link_back'), sheets_path, class: 'hide-on-mobile' %>
</div>
