<div id="<%= dom_id sheet %>">
  <h2 class='fw-bold'>
    <%= sheet.name %>
  </h2>

  <p>
    <strong><%= t('.description')%></strong>
    <%= sheet.description %>
  </p>

  <% if action_name == 'show' %>
      <p><strong><%= t('.type')%></strong><%= sheet.workout? ? t('.sheet_type') : t('.sheet_type_1') %></p>
  <% end %>
</div>
