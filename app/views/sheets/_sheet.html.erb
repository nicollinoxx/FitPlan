<% cache [sheet, action_name] do %>
    <div id="<%= dom_id sheet %>">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="h5 mb-0 fw-bold">
          <i class="bi <%= sheet.workout? ? 'bi-activity' : 'bi-cup-hot' %> text-dark"></i>
          <%= sheet.name %>
        </h2>

        <% unless action_name == "show" %>
            <%= link_to sheet_path(sheet), data: { turbo_frame: "_top" }, class: "btn btn-sm btn-outline-success me-1" do %>
              <i class="bi bi-pencil"></i>
            <% end %>
        <% end %>
      </div>

      <p class="text-muted mb-3"><%= sheet.description %></p>

      <% if action_name == "show" %>
        <p class="text-warning mb-0"><%= sheet.workout? ? t('workout') : t('diet') %></p>
      <% end %>
    </div>
<% end %>
