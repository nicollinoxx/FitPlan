<% cache [sheet] do %>
  <div id="<%= dom_id sheet %>">
    <div class="card-body">
      <div class="d-flex align-items-center mb-2">
        <i class="bi <%= sheet.workout? ? 'bi-heart-pulse text-danger' : 'bi-egg-fried text-warning' %> fs-3 me-2"></i>
        <div>
          <h5 class="card-title mb-1"><%= sheet.name %></h5>
          <small class="text-muted"><%= sheet.workout? ? t('workout') : t('diet') %></small>
        </div>
      </div>
      <p class="card-text text-muted mb-0"><%= sheet.description %></p>
    </div>
  </div>
<% end %>
