<% content_for(:title, t('.title')) %>

<div class="mx-auto py-3" style="max-width: 500px;">
  <div class="shadow-lg p-4 rounded">
      <div class="text-center mb-4">
        <%= image_tag 'logo.png', class: 'img-fluid mb-3', style: 'max-height: 70px;' %>
        <h2 class="text-success"><%= t('.title') %></h2>
      </div>

      <%= form_with(url: sign_in_path, class: 'mb-4') do |form| %>
        <div class="mb-3">
          <%= form.label :email, class: 'form-label' %>
          <%= form.email_field :email, value: params[:email_hint], required: true, autofocus: true, class: 'form-control focus-ring focus-ring-success py-1 px-2', placeholder: "name@example.com" %>
        </div>

        <div class="mb-3">
          <div class="d-flex justify-content-between">
            <%= form.label :password, t('.label.password'), class: 'form-label' %>
            <%= link_to t('.link_forgot_password'), new_identity_password_reset_path, class: 'small' %>
          </div>
          <%= form.password_field :password, required: true, class: 'form-control', placeholder: "password" %>
        </div>

        <div class="my-4">
          <%= form.submit t('.submit'), class: 'btn btn-success w-100' %>
        </div>
      <% end %>

      <div class="mb-5">
        <p class="mb-2"><%= t('.section_signup') %></p>
        <%= link_to t('.signup'), sign_up_path, class: 'btn btn-dark w-100' %>
      </div>
  </div>

  <div class="d-flex justify-content-between align-items-center shadow-lg p-3 rounded mt-4">
    <div><i class="bi bi-translate me-2"></i><%= t('language') %></div>
    <div class="dropdown">
      <button class="btn btn-sm dropdown-toggle" type="button" id="languageButton" data-bs-toggle="dropdown">
        <%= I18n.locale == :en ? t('languages.en') : t('languages.pt') %>
      </button>
      <ul class="dropdown-menu dropdown-menu-end">
        <li><%= link_to t('languages.en'), set_locale_path('en'), class: 'dropdown-item' %></li>
        <li><%= link_to t('languages.pt'), set_locale_path('pt'), class: 'dropdown-item' %></li>
      </ul>
    </div>
  </div>
</div>
