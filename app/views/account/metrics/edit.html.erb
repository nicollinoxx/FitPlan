<% content_for(:title, t('.title')) %>

<%= form_with url: account_metrics_path, method: :patch do |form| %>
    <div class="mb-3">
        <%= form.label :height, "Height (cm)", style: "display: block", class: 'form-label' %>
        <%= form.number_field :height, class: "form-control", placeholder: "Enter your height 0,0", step: "any", min: 0 %>
    </div>

    <div class="mb-3">
        <%= form.label :weight, "Weight (kg)", style: "display: block", class: 'form-label' %>
        <%= form.number_field :weight, placeholder: "Enter your weight 0,0", class: "form-control", step: "any", min: 0 %>
    </div>

    <div class="mb-3">
        <%= form.label :age, "Age", style: "display: block", class: 'form-label' %>
        <%= form.number_field :age, placeholder: "Enter your age", class: "form-control" %>
    </div>

    <div class="mb-3">
        <%= form.label :gender, "Gender", style: "display: block", class: 'form-label' %>
        <%= form.select :gender, options_for_select([['Male', 'male'], ['Female', 'female']]), {}, { class: "form-select" } %>
    </div>

    <%= form.submit "save", class: "btn btn-success" %>
<% end %>
